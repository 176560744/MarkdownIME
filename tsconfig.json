{
  "compilerOptions": {
    "target": "es5",
    "module": "system",
    "moduleResolution": "node",
	"declaration": true,
    "rootDir": "src",
    "out": "dist/MarkdownIME.js",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false
  },
  "exclude": [
    "node_modules",
    "/node_modules",
    "../node_modules",
    "*node_modules*",
    "/node_modules*",
    "angular2",
    "rxjs",
    "typings",
	"dist"
  ]
}
